<?xml version="1.0"?>
<config>
    <modules>
        <Iconic_Job>
            <version>0.1.0</version>
        </Iconic_Job>
    </modules>
    <frontend>
        <routers>
            <job>
                <use>standard</use>
                <args>
                    <module>Iconic_Job</module>
                    <frontName>job</frontName>
                </args>
            </job>
            <customer>
                <args>
                    <modules>
                        <Iconic_Job before="Mage_Customer">Iconic_Job_Customer</Iconic_Job>
                    </modules>
                </args>
            </customer>
        </routers>
        <layout>
            <updates>
                <job>
                    <file>job.xml</file>
                </job>
            </updates>
        </layout>
        <translate>
            <modules>
                <translations>
                    <files>
                        <default>Iconic_Job.csv</default>
                    </files>
                </translations>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <iconic_job before="Mage_Adminhtml">Iconic_Job_Adminhtml</iconic_job>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <models>
            <job>
                <class>Iconic_Job_Model</class>
                <resourceModel>job_mysql4</resourceModel>
            </job>
            <category>
                <class>Iconic_Job_Model_Category</class>
                <resourceModel>job_category</resourceModel>
            </category>
            <level>
                <class>Iconic_Job_Model_Level</class>
                <resourceModel>job_level</resourceModel>
            </level>
            <type>
                <class>Iconic_Job_Model_Type</class>
                <resourceModel>job_type</resourceModel>
            </type>
            <parentcategory>
            	<class>Iconic_Job_Model_Parentcategory</class>
                <resourceModel>job_parent_category</resourceModel>
            </parentcategory>
            <location>
                <class>Iconic_Job_Model_Location</class>
                <resourceModel>job_location</resourceModel>
            </location>
            <language>
                <class>Iconic_Job_Model_Language</class>
                <resourceModel>job_language</resourceModel>
            </language>
            <country>
                <class>Iconic_Job_Model_Country</class>
                <resourceModel>job_country</resourceModel>
            </country>
            <feature>
                <class>Iconic_Job_Model_Feature</class>
                <resourceModel>job_feature</resourceModel>
            </feature>
            <langlevel>
                <class>Iconic_Job_Model_Langlevel</class>
                <resourceModel>job_langlevel</resourceModel>
            </langlevel>
            <salarycurrency>
                <class>Iconic_Job_Model_Salarycurrency</class>
                <resourceModel>job_salarycurrency</resourceModel>
            </salarycurrency>
            <salarytype>
                <class>Iconic_Job_Model_Salarytype</class>
                <resourceModel>job_salarytype</resourceModel>
            </salarytype>
            <status>
                <class>Iconic_Job_Model_Status</class>
                <resourceModel>job_status</resourceModel>
            </status>
            <job_mysql4>
                <class>Iconic_Job_Model_Mysql4</class>
                <entities>
                    <job>
                        <table>t_job</table>
                    </job>
                    <category>
                    	<table>m_job_category</table>
                    </category>
                    <parentcategory>
                        <table>m_job_parent_category</table>
                    </parentcategory>
                    <country>
                        <table>m_job_listcountry</table>
                    </country>
                    <location>
                        <table>m_job_listlocation</table>
                    </location>
                    <status>
                        <table>m_job_status</table>
                    </status>
                    <level>
                        <table>m_job_level</table>
                    </level>
                    <type>
                        <table>m_job_type</table>
                    </type>
                    <language>
                        <table>m_job_language</table>
                    </language>
                    <feature>
                        <table>m_job_feature</table>
                    </feature>
                    <langlevel>
                        <table>m_job_langlevel</table>
                    </langlevel>
                    <salarycurrency>
                        <table>m_salary_currency</table>
                    </salary_currency>
                    <salary_type>
                        <table>m_salary_type</table>
                    </salarytype>
                </entities>
            </job_mysql4>
        </models>
        <resources>
            <job_setup>
                  <setup>
                    <module>Iconic_Job</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                  </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </job_setup>
            <job_write>
                <connection>
                    <use>core_write</use>
                </connection>
 
 
            </job_write>
            <job_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </job_read>
        </resources>
        <blocks>
            <job>
                <class>Iconic_Job_Block</class>
            </job>
        </blocks>
        <helpers>
            <job>
                <class>Iconic_Job_Helper</class>
            </job>
        </helpers>
        <events>
            <controller_front_init_routers>
                <observers>
                    <job>
                        <type>singleton</type>
                        <class>Iconic_Job_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </job>
                </observers>
            </controller_front_init_routers>
        </events>
        <fieldsets>
            <customer_account>
                 <sex><create>1</create><update>1</update><name>1</name></sex>
            </customer_account>
        </fieldsets>
        <rewrite>
            <iconic_job_checkout_cart>
                <from><![CDATA[#^/customer/account/#]]></from>
                <!--
                    - mymodule matches the router frontname below
                    - checkout_cart matches the path to your controller
                   
                    Considering the router below, "/mymodule/checkout_cart/" will be
                    "translated" to "/MyNameSpace/MyModule/controllers/Checkout/CartController.php" (?)
                -->
                <to>/job/customer_account/</to>
            </iconic_job_checkout_cart>
        </rewrite>
    </global>
</config>